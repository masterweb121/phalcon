<div class="main-module">
	<div class="head"><h2>{#net#} {#logging#}</h2></div>
	<div class="body"> 

<table>
	<tr>
		<td>{#number#}</td>
		<td>{#time#}</td>
		<td>{#callsign#}</td>
		<td>{#rst#}</td>
		<td>QTH</td>
		<td>{#device#}</td>
		<td>{#power#}</td>
	</tr>
{foreach from=$checks item=check}
	<tr>
		<td>{counter}</td>
		<td>{$check->time|date_format:"%H:%M"}</td>
		<td><a href="/{$locale}/radio/qrz/{$check->callsign|lower}.html">{$check->callsign}</a></td>
		<td>{$check->rst}</td>
		<td>{$check->qth}</td>
		<td>{$check->device}</td>
		<td>{$check->power}</td>
	</tr>
{/foreach}
</table>

	</div>
	<div class=foot></div>
</div>
