<div class="side-module">
	<div class="head"><h2>{#net#}</h2> - <span>{$net->datetime}</span></div>
	<div class="body"> 

<div><h1> {$net->frequency} Radio net</h1></div>
<div>{$net->topic}, control by <a href="/{$locale}/radio/qrz/{$net->control}.html">{$net->control}</a></div>

	</div>
	<div class=foot></div>
</div>
{/strip}

{literal}
<script type="text/javascript">
$(document).ready(function(){
	if (GBrowserIsCompatible()) {
		var map = new GMap2(document.getElementById("map_canvas"));
		map.addControl(new GLargeMapControl());
        map.addControl(new GScaleControl());
        map.enableScrollWheelZoom();
        map.addControl(new GMapTypeControl());
        map.addControl(new GOverviewMapControl());

		function createMarker(point, call, qth) {
          if(!qth) qth='收集中...';
          
          var marker = new GMarker(point);
          GEvent.addListener(marker, "click", function() {
{/literal}          
            marker.openInfoWindowHtml("<span>{#callsign#}: <a href=\"/{$locale}/radio/qrz/"+call+".html\"><strong style=\"color:#DE0000;\">" + call + "</strong></a>" +"<br />{#latitude#}: "+ point.lat() +"<br />{#longitude#}: "+ point.lng()+ "<br />QTH："+qth+"<br /></span>");
{literal}            
          });
          return marker;
        }
{/literal}
		//map.setCenter(new GLatLng{$net->coordinates}, 10);
		var mylatlng = new GLatLng{$net->coordinates}
		map.setCenter(mylatlng, 9);
		
		{foreach from=$checkin_coordinates item=log_cds}  
    	var polyline = new GPolyline([
    		mylatlng,	
        	new GLatLng{$log_cds->coordinates}
			], "#FF0000", 3);
		map.addOverlay(polyline);
		var latlng = new GLatLng{$log_cds->coordinates}; 
		map.addOverlay(createMarker(latlng, "{$log_cds->callsign}", "{$log_cds->qth}"));
		{/foreach}
		//var opts = {ldelim} text : "{#net#}<br>{#frequency#}:{$net->frequency}<br>{#control#}:{$net->control}"{rdelim} ;
        //var marker = new PopupMarker(mylatlng, opts);
        //map.addOverlay(marker);
        map.openInfoWindowHtml(map.getCenter(), "<h3>{#net#}</h3><br>{#frequency#}:{$net->frequency}, {#control#}:{$net->control}");
{literal}        
	}

});	
</script>
{/literal}
<div class="main-module">
	<div class="head"><h2>{#cover#}</h2></div>
	<div class="body"> 
		<div id="map_canvas" style="width: 650px; height: 400px"></div>
	</div>
	<div class=foot></div>
</div>	

